/**index.wxss**/
page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.container1 {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0;
    box-sizing: border-box;
}

.scrollarea {
    flex: 1;
    overflow-y: hidden;
}

.userinfo1 {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
    width: 80%;
}

.userinfo-avatar1 {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.avatar-wrapper1 {
    padding: 0;
    width: 56px !important;
    border-radius: 8px;
    margin-top: 40px;
    margin-bottom: 40px;
}

.avatar1 {
    display: block;
    width: 56px;
    height: 56px;
}

.nickname-wrapper1 {
    display: flex;
    width: 100%;
    padding: 16px;
    box-sizing: border-box;
    border-top: .5px solid rgba(0, 0, 0, 0.1);
    border-bottom: .5px solid rgba(0, 0, 0, 0.1);
    color: black;
}

.nickname-label1 {
    width: 105px;
}

.nickname-input1 {
    flex: 1;
}

.button {
    background: linear-gradient(270deg, #ABDCFF, #0396FF);
    border-radius: 90rpx;
    bottom: 160rpx;
    color: #fff;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0;
    position: fixed;
    width: 420rpx !important
}