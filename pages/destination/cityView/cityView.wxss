/* pages/destination/cityView/cityView.wxss */

page {
  background: #f0ede2;
  font-weight: bold;
}

/*景点*/

.view-box {
  width: 100%;
  padding: 0 10rpx 0 18rpx;
  box-sizing: border-box;
}

.view {
  width: 100%;
  background: #fff;
  padding: 12rpx 18rpx 16rpx 12rpx;
  box-sizing: border-box;
  margin-top: 16rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.view .img {
  float: left;
  width: 233rpx;
  height: 172rpx;
  border-radius: 10rpx;
  background: rgb(255, 255, 255);
}

