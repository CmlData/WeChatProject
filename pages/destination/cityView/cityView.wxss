.view .info {
    margin-left: 251rpx;
}

.view .info .title, .view .info .desc {
  display: block;

}

.view .info .title {
  font-size: 28rpx;
  color: #666;
  line-height: 38rpx;
  margin-top: 20rpx;
}

.view .info .desc {
  font-size: 20rpx;
  color: #bbb4af;
  line-height: 28rpx;
  height: 10px;
}

.view .info .price {
  display: flex;
  color: #bbb4af;
  margin-top: 46rpx;
  align-items: center;
}

.view .price .new-price {
  color: #fa6f12;
  font-size: 26rpx;
}

.view .price .old-price {
  position: relative;
  font-size: 20rpx;
  margin-left: 10rpx;
}

.view .price .old-price .line {
  position: absolute;
  width: 100%;
  height: 1px;
  background: #bbb4af;
  top: 50%;
  left: 0;
}

.view .price .seller {
  margin-left: auto;
  font-size: 22rpx;
}

.bottom {
    text-align: center;
    margin-top: 20px;
    padding-bottom: 30px;
    font-size: 28rpx;
    color: #666;
}