/* pages/destination/cityView/subProduct/sub.wxss */

.middle image {
    width: 100%;
    height: 1000rpx;
}

.view-detail {
    width: 100%;
    padding: 20rpx;
}

/* 详情图片 */

.price {
    background: #fff;
    padding: 20rpx;
    margin-top: 20rpx;
}

.price .name {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 10rpx;
    font-weight: bolder;
}

.price .detail {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.price .detail view {
    font-size: 30rpx;
    color: #ff5000;
    font-weight: bolder;
}

.price .detail .order {
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #ff5000;
    color: #fff;
    font-size: 28rpx;
    border-radius: 10rpx;
    margin-right: 5%;
}

.need {
    background: #fff;
    padding: 20rpx;
    margin-top: -20rpx;
}

.need .title {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
    font-weight: bolder;
}

.need .content {
    font-size: 26rpx;
    color: #666;
    margin-top: 10rpx;
}

.detail .order {
    /* 调整按钮向右对齐 */
    float: right;
}