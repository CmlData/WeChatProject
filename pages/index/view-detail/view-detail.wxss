/* pages/index/view-detail/view-detail.wxss */
@import "../ratings-template/ratings.wxss";

.page {
  background: #f8f8f8;
  font-family: Arial, sans-serif;
}

.view-detail {
  width: 100%;
  padding: 20rpx;
}

.view-detail .top {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}

.view-detail .top view {
  flex: 1;
  text-align: center;
}

.view-detail .top text {
  font-size: 28rpx;
  color: #666;
}

.view-detail .top .active {
  color: #ff5000;
}

/* 详情图片 */
.middle image {
    width: 100%;
}

.price {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.price .name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.price .detail {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.price .detail view {
  font-size: 30rpx;
  color: #ff5000;
  font-weight: bolder;
}

.price .detail .decre {
  padding: 0 20rpx;
  border: 1rpx solid #ff5000;
  border-radius: 10rpx;
}

.price .detail .order {
  width: 180rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #ff5000;
  color: #fff;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin-right: 5%;
}

.need {
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}

.need .title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.need .content {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}
.detail .order {
    /* 调整按钮向右对齐 */
    float: right;
}
.more-ratings-btn {
  width: 100%;
  background: #ff5000;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 10rpx;
  margin-top: 20rpx;
}
