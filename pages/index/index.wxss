/* 轮播图 */
.swiper-clz {
  margin-left: 0rpx;
  width: calc(100% - 0rpx - 0rpx) !important;
  margin-top: 20rpx;
  /* 轮播图高度修改 */
  margin-bottom: 30rpx;
  margin-right: 0rpx;
}

.swiper-scale {
  transform: scaleY(0.9);
  margin: 0 20rpx;
}

.container {
  padding-left: 0px;
  padding-right: 0px;
}


.slide {
  margin-top: 22rpx;
  background: #fff;
  padding: 0 36rpx;
}

.slide .title {
  padding: 28rpx 0 35rpx;
}

.slide .title text:first-child {
  font-size: 30rpx;
  font-weight: bolder;
  color: #7f7469;
  padding-right: 20rpx;
}

.slide .title text:last-child {
  font-size: 22rpx;
  font-weight: bold;
  color: #bbb4af;
  border-left: 1px solid #bbb4af;
  padding-left: 20rpx;
}

/* 产品推荐 */

.img-box {
  margin-top: 20rpx;
  margin-left: 1%;
}

.img-box .img {
  position: relative;
  width: 328rpx;
  height: 194rpx;
  border-radius: 10px;
  float: left;
}

.img-box .img:nth-of-type(2n) {
  margin-left: 14rpx;
}

.img-box .img:nth-of-type(n+3) {
  margin-top: 14rpx;
}

.img-box image {
  width: 100%;
  height: 100%;
}

.img-box text {
  position: absolute;
  display: block;
  bottom: 0;
  left: 0;
  width: 100%;
  padding-left: 28rpx;
  box-sizing: border-box;
  height: 48rpx;
  line-height: 48rpx;
  background: rgba(255, 255, 255, 0.4);
  color: #fff;
  font-size: 26rpx;
  /* text-shadow: 1px 1px 2px black; */
}

/*轮番*/



.hot-view {
  margin-top: 30rpx;
  background: #fff;
  float: left;
  margin-left: 13.5%;
}

.hot-view .tab {
  display: flex;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 1px solid #edeadd;
  margin-bottom: 20rpx;
  width: 85%;
}

.hot-view .tab text {
  width: 272rpx;
  height: 100%;
  font-weight: bold;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}

.hot-view .tab .active {
  color: #98d361;
  border-bottom: 3px solid #98d361;
  box-sizing: border-box;
}

.fill {
  height: 26rpx;
  width: 100%;
  background: #fff;
}

/*动画*/
.animationData {
  opacity: 0;
}

